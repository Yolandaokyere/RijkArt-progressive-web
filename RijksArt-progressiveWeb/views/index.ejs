<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#C5B6AB"/>
    <script defer src="script/app.js"></script>
    <meta name="theme-color" content="#">
    <title>ArtLibrary</title>
  </head>
  <body>
    <header>
      <article>
           <h1>Search your favourite ART</h1>
      <!-- <article id="searchBar"> -->
        <form method="GET" action="/search">
            <input name="q" type="search" placeholder="  search art">
            <!-- <input name="search-button" type="submit" value="search"> -->
        </form> 
    </header>
    <div class="profile-container">
      <div class="kunstImg loading"></div> <!-- will wrap an image tag -->
      <div class="titleShort loading"></div> <!-- h2 object name -->
      <div class="kunstTitel loading"></div> <!-- =profile info: title art - year - artist -->
    </div> 
    <div class="overlay"> <!-- if principalOrFirstMaker doens't exist -->
    </div>
            <ol>
<% data.forEach((artObject)=> { %>
              <li>
                <h3 class="titleClass"><%= artObject.longTitle %></h3>
                <h2 class="titleShort"><%= artObject.title %></h2>
                <% if(artObject.webImage){ %>
                <img src="<%= artObject.webImage.url.slice(0, -3) + "=s1000" %>" alt="<%= artObject.title %>">
                <% } else{ %>  
                    <p>no photos uploaded</p>
                <% } %>
              </li>
<% }) %>
            </ol>
            </div>
    </div>
  </body>
</html>
